<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef Name="OuterRimBorderBase" ParentName="OuterRimBuildingBase" Abstract="True">
		<graphicData>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
		<rotatable>true</rotatable>
		<altitudeLayer>FloorEmplacement</altitudeLayer>
		<passability>Standable</passability>
		<fillPercent>0</fillPercent>
		<selectable>true</selectable>
		<soundImpactDefault>BulletImpact_Ground</soundImpactDefault>
		<leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
		<defaultPlacingRot>South</defaultPlacingRot>
		<destroyable>true</destroyable>
		<tradeability>None</tradeability>
		<clearBuildingArea>false</clearBuildingArea>
		<resourcesFractionWhenDeconstructed>0</resourcesFractionWhenDeconstructed>
		<placingDraggableDimensions>1</placingDraggableDimensions>
		<statBases>
			<MaxHitPoints>45</MaxHitPoints>
			<WorkToBuild>100</WorkToBuild>
			<Flammability>0</Flammability>
			<Mass>1</Mass>
			<Beauty>1</Beauty>
		</statBases>
		<stuffCategories>
			<li>Woody</li>
			<li>Stony</li>
			<li>Metallic</li>
		</stuffCategories>
		<building>
			<isEdifice>false</isEdifice>
			<paintable>true</paintable>
		</building>
		<researchPrerequisites>
			<li>ComplexFurniture</li>
		</researchPrerequisites>
		<costStuffCount>1</costStuffCount>
		<modExtensions>
			<li Class="TabulaRasa.DefModExt_SubCategoryBuilding">
				<subCategory>OuterRim_SubCatDecorMisc</subCategory>
				<showOnlyInCategory>true</showOnlyInCategory>
			</li>
		</modExtensions>
	</ThingDef>

	<ThingDef ParentName="OuterRimBorderBase">
		<defName>OuterRim_BorderSimple</defName>
		<label>border (simple)</label>
		<description>Simple floor border. Purely decorative.</description>
		<graphicData>
			<texPath>OuterRim/Building/Borders/Border_Simple</texPath>
		</graphicData>
		<uiIconOffset>(0, -0.35)</uiIconOffset>
	</ThingDef>

